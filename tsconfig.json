{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "paths": {
      "@business/*": [
        "./src/business/*"
      ],
      "@common/*": [
        "./src/common/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@container/*": [
        "./src/container/*"
      ],
      "@store/*": [
        "./src/store/*"
      ]
    },
    "lib": [
      "es5",
      "es2017",
      "dom",
      "scripthost"
    ]
  },
  "include": [
    "./src/**/*",
    "./__mocks__/**/*",
  ],
  "exclude": [
    "node_modules",
  ]
}